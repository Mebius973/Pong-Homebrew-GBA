{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "stop emulation",
            "type": "shell",
            "linux": {
                "command": "pkill -15 mgba"
            }
        },
        {
            "label": "make debug",
            "type": "process",
            "command": "make",
            "args": ["DEBUG=1"],
            "problemMatcher": []
        },
        {
            "label": "make release",
            "type": "process",
            "command": "make",
            "args": ["DEBUG=0"],
            "problemMatcher": []
        },
        {
            "label": "clean",
            "type": "shell",
            "command": "make clean"
        },
        {
            "label": "gdb-debug",
            "type": "shell",
            "dependsOn": ["make clean", "make debug"],
            "isBackground": true,
            "linux":{
                "command": "/usr/bin/mgba",
                "args": ["-g", "${workspaceFolder}/${workspaceFolderBasename}.gba"]
            },
            "presentation": {
                "clear": true,
                "reveal": "always",
                "panel": "new"
            },
            "problemMatcher": [
                {
                  "pattern": [
                    {
                      "regexp": ".",
                      "file": 1,
                      "location": 2,
                      "message": 3
                    }
                  ],
                  "background": {
                    "activeOnStart": true,
                    "beginsPattern": ".",
                    "endsPattern": ".",
                  }
                }
              ]
        },
        {
            "label": "run",
            "type": "shell",
            "isBackground": true,
            "linux": {
                "command": "/usr/bin/mgba ${workspaceFolder}/${workspaceFolderBasename}.gba"
            },
            "problemMatcher": []
        }
    ]
}