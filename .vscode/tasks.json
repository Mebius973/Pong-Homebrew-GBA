{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "stop emulation",
            "type": "shell",
            "linux": {
                "command": "pkill -15 mgba"
            },
            "windows": {
                "command": "taskkill -F -im mgba.exe"
            }
        },
        {
            "label": "make debug",
            "dependsOn": ["make clean"],
            "type": "process",
            "command": "make",
            "args": ["DEBUG=1"],
            "problemMatcher": []
        },
        {
            "label": "make release",
            "dependsOn": ["make clean"],
            "type": "process",
            "command": "make",
            "args": ["DEBUG=0"],
            "problemMatcher": []
        },
        {
            "label": "make clean",
            "type": "shell",
            "command": "make clean"
        },
    ]
}